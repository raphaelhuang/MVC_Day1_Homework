@model MVC_Day1_Homework.ViewModels.AssetViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="well">

    @using (Ajax.BeginForm("AddRecord", "Home", new AjaxOptions { UpdateTargetId = "AssetList"}))
    {
        <div class="form-horizontal">

            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">類別</label>
                <div class="col-sm-10">
                    <select id="category" name="category" class="form-control">
                        <option value=1 selected>支出</option>
                        <option value=0>收入</option>
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">金額</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Money, new { htmlAttributes = new { @class = "form-control", @placeholder = "金額" } })
                    @Html.ValidationMessageFor(model => model.Money)
                </div>
            </div>


            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">日期</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @type = "date", @class = "form-control", @placeholder = "日期" } })
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </div>

            <div class="form-group">
                <label for="description" class="col-sm-2 control-label">備註</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "備註" } })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        </div>
    }

</div>

<div id="AssetList">
    @Html.Action("GetAssetList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}