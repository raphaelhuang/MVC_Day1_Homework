@{
    ViewBag.Title = "GetAssetList";
    Layout = "";
}
@using PagedList.Mvc;
@using PagedList;


<h2>GetAssetList</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>備註</th>
            </tr>

            @foreach (var item in Model)
            {
                var category = ((@item.Categoryyy == 1) ? "支出" : "收入");

                <tr>
                    <td>@item.Id.ToString("N")</td>
                    <td>@ChangeFont.ChangeColor(category, item.Categoryyy)</td>
                    <td>@item.Dateee.ToString("yyyy-MM-dd")</td>
                    <td>@item.Amounttt.ToString("N0")</td>
                    <td>@item.Remarkkk</td>
                </tr>
            }

            <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
        </table>
    </div>
</div>
